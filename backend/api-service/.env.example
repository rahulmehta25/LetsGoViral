# Database — get DB_HOST from: terraform output db_private_ip
# For local dev: use localhost and run `psql -f infrastructure/database/init.sql`
DB_HOST=localhost
DB_PORT=5432
DB_NAME=creator_mvp
DB_USER=clipora
DB_PASSWORD=<your-local-db-password>
DB_SSL=false

# API auth — generate with: openssl rand -hex 32
MVP_API_KEY=<generate-with-openssl-rand-hex-32>

# GCP
GCP_PROJECT_ID=clipora-487805
GCP_REGION=us-east1

# Storage — from: terraform output uploads_bucket / processed_bucket
GCS_UPLOADS_BUCKET=clipora-487805-uploads
GCS_UPLOADS_BUCKET_FALLBACK=clipora-487805-uploads
GCS_PROCESSED_BUCKET=clipora-487805-processed
CDN_BASE_URL=https://storage.googleapis.com/clipora-487805-processed

# Signed URL support for ADC users (teammates without service account key).
# Set this to the service account email so ADC can sign URLs via IAM.
# Your Google account needs "Service Account Token Creator" role on this SA.
# Leave blank/unset if using GOOGLE_APPLICATION_CREDENTIALS (key file).
GCS_SIGNING_SERVICE_ACCOUNT=

PORT=8080
NODE_ENV=development
