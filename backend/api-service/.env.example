# Database — get DB_HOST from: terraform output db_private_ip
# (or db_public_ip for local dev connecting via internet)
DB_HOST=10.x.x.x
DB_PORT=5432
DB_NAME=creator_mvp
DB_USER=clipora
DB_PASSWORD=your-db-password
DB_SSL=false

# API auth — generate with: openssl rand -hex 32
MVP_API_KEY=your-api-key-here

# GCP
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-east1

# Storage — from: terraform output uploads_bucket / processed_bucket
GCS_UPLOADS_BUCKET=your-project-id-uploads
GCS_PROCESSED_BUCKET=your-project-id-processed
CDN_BASE_URL=https://storage.googleapis.com/your-project-id-processed

PORT=8080
NODE_ENV=development
